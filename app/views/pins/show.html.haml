#pins_show.row
  .col-md-8.col-md-offset-2
    .panel.panel-default
      .panel-headeing.pin_image
        = image_tag @pin.image.url
      .panel-body
        %h1= @pin.title
        %p.description= @pin.description
        %p 
      .panel-footer
        .row
          .col-md-6
            %p.user
            投稿者
            = @pin.user.email
          .col-md-6
            .btn-group.pull-right
              = link_to like_pin_path(@pin), method: :put
              = link_to "編集", edit_pin_path, class:"btn btn-default"
              = link_to "削除", pin_path, method: :destroy, data: { confirm: "Are you sure?" }, class:"btn btn-default"
